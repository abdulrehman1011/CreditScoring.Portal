
@{
    ViewData["Title"] = "AdminLogin";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/admin_login.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/admin_login.min.css" />
    </environment>
</head>
<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="display-1 fadeIn first">
                <h3>Login</h3>
            </div>

            <!-- Login Form -->
            
                <input type="text" id="username" class="fadeIn second" name="username" placeholder="Username">
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="Password">
                <input type="button" id="submit" class="fadeIn fourth" value="Log In">
            

            <!-- Remind Passowrd -->
            @*<div id="formFooter">
                <a class="underlineHover" href="#">Forgot Password?</a>
            </div>*@
            <span id="error-lable" class="error"></span>
        </div>
    </div>
    <environment include="Development">
        <script src="~/js/plugins/jquery-3.4.1.min.js"></script>
        <script src="~/js/plugins/bootstrap.min.js"></script>
        <script src="~/js/admin_login.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/admin_login.min.js"></script>
    </environment>
</body>
</html>


