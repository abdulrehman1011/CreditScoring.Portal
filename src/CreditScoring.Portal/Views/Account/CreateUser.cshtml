@{ 
    var scoreList = (List<ScoreBandViewModel>)ViewBag.ScoreList;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateUser</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/create_user.css" />
        <link rel="stylesheet" href="~/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/bootstrap-multiselect.css" />
        <link rel="stylesheet" href="~/css/header.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/create_user.min.css" />
    </environment>
</head>
<body>
    @section header_title
        {
        <h3>Admin Panel</h3>
    }

    <div class="d-flex justify-content-center">

        <form asp-action="CreateUser" class="col-sm-3 d-flex justify-content-center">

            <div id="formContent">
                <h4 style="line-height: 50px;">Create User</h4>
                <hr />
                

                <input type="text" id="username" name="username" placeholder="Username" />


                <div>
                    <input type="password" id="password" name="password" placeholder="Password" />
                </div>
                <div>
                    <input type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password" />
                </div>
                <div>
                    <input type="password" id="token" name="token" placeholder="Token" />
                </div>
                <div>
                    <select class="custom-select" id="basic" multiple="multiple" style="display:none;">
                        @foreach (var score in scoreList)
                        {
                            <option value="@score.Id">@score.Score</option>
                        }
                    </select>

                </div>
                <div class="d-flex justify-content-center" style="margin: 20px 0px;">
                    <button class="btn btn-success" id="btn-create">
                        <i class="fa fa-refresh" id="btn-spin" style="padding: 0px 5px;margin-right: 5px;"></i>Create
                    </button>

                </div>

                <span id="error-lable" class="error"></span>
            </div>

        </form>

    </div>


    <environment include="Development">
        <script src="~/js/plugins/jquery-3.4.1.min.js"></script>
        <script src="~/js/plugins/popper.min.js"></script>
        <script src="~/js/plugins/bootstrap.min.js"></script>
        <script src="~/js/plugins/bootstrap-multiselect.min.js"></script>
        <script src="~/js/create_user.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/create_user.min.js"></script>
    </environment>
</body>
</html>
